<%= render "devise/shared/error_messages", resource: resource %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <h1 class="sign-form-h1">Смена пароля</h1>
            <hr/>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.hidden_field :reset_password_token %>

                <div class="form-group">
                    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", :class => "form-control", :placeholder => "Пароль (минимум #{@minimum_password_length if @minimum_password_length} символов)" %>
                </div>

                <div class="form-group mb-4">
                    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder => "Подтверждение пароля" %>
                </div>

                <div class="actions">
                    <%= button_tag type: 'submit', class: "btn btn-dark col-sm-12 mb-2", id: "cahnge-pass-button" do %>
                        <i class="fa fa-check fa-main-menu-licon" aria-hidden="true"></i> Изменить пароль
                    <% end %>
                    <%= link_to "Вход", new_session_path(resource_name), class: 'mb-2' %><br />
                    <%= link_to "Регистрация", new_registration_path(resource_name) %><br />
                </div>
            <% end %>

        </div>
    </div>
</div>
