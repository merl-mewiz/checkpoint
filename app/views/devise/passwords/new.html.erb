<%= render "devise/shared/error_messages", resource: resource %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <h1 class="sign-form-h1">Восстановление пароля</h1>
            <hr/>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

                <div class="form-group mb-4">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => 'Электронная почта' %>
                </div>

                <div class="actions">
                    <%= button_tag type: 'submit', class: "btn btn-dark col-sm-12 mb-2", id: "login-button" do %>
                        <i class="fa fa-envelope-o fa-main-menu-licon" aria-hidden="true"></i> Отправить письмо
                    <% end %>

                    <%= link_to "Вход", new_session_path(resource_name), class: 'mb-2' %><br />
                    <%= link_to "Регистрация", new_registration_path(resource_name) %><br />
                </div>
            <% end %>

        </div>
    </div>
</div>
