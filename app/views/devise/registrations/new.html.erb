<%= render "devise/shared/error_messages", resource: resource %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6">
            <h1 class="sign-form-h1">Регистрация</h1>
            <hr/>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="form-group">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => 'Электронная почта' %>
                </div>

                <div class="form-group">
                    <%= f.password_field :password, autocomplete: "new-password", :class => "form-control", :placeholder => "Пароль (минимум #{@minimum_password_length if @minimum_password_length} символов)" %>
                </div>

                <div class="form-group mb-4">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control", :placeholder => "Подтверждение пароля" %>
                </div>

                <div class="actions">
                    <%= button_tag type: 'submit', class: "btn btn-dark col-sm-12 mb-2", id: "login-button" do %>
                        <i class="fa fa-pencil-square-o fa-main-menu-licon" aria-hidden="true"></i> Зарегестрироваться
                    <% end %>
                    <%= link_to "Вход", new_session_path(resource_name) %><br />

                </div>
            <% end %>
        </div>
    </div>
</div>
